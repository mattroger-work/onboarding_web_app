<configuration>
  <system.webServer>

    <!-- indicates that the ipackage.json file is a node.js application 
    to be handled by the iisnode module -->

    <handlers>
      <add name="iisnode" path="package.json" verb="*" modules="iisnode" />
    </handlers>

    <!-- adds package.json to the default document list to allow 
    URLs that only specify the application root location, 
    e.g. http://mysite.antarescloud.com/ -->

    <defaultDocument enabled="true">
      <files>
        <add value="package.json" />
      </files>
    </defaultDocument>

  </system.webServer>
</configuration>